@model IEnumerable<ClinicSystem2.ViewModels.DoctorViewModel>

@{
    ViewData["Title"] = "Doctors";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Doctors Management</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Doctor
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Doctors List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Specialty</th>
                        <th>Consultation Fee</th>
                        <th>Appointments</th>
                        <th>Total Revenue</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br />
                                    <small class="text-muted">@item.Description</small>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                            <td>@item.ConsultationFee.ToString("C")</td>
                            <td>
                                <span class="badge bg-info">@item.AppointmentCount</span>
                            </td>
                            <td>
                                <span class="badge bg-success">@item.TotalRevenue?.ToString("C")</span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.DoctorID" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-action="AvailableSlots" class="btn btn-outline-primary mb-2 w-100">
                    <i class="fas fa-calendar-check"></i> View Available Slots
                </a>
                <a asp-controller="Home" asp-action="QuickAppointment" class="btn btn-outline-success mb-2 w-100">
                    <i class="fas fa-plus-circle"></i> Quick Appointment
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4>@Model.Count()</h4>
                        <small class="text-muted">Total Doctors</small>
                    </div>
                    <div class="col-6">
                        <h4>@Model.Count(d => d.IsActive)</h4>
                        <small class="text-muted">Active Doctors</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>