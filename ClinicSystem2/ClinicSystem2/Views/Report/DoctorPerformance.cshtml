@model IEnumerable<ClinicSystem2.ViewModels.FinancialReportViewModel>

@{
    ViewData["Title"] = "Doctor Performance Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Doctor Performance Report</h1>
    <div>
        <a asp-action="Financial" class="btn btn-outline-primary">Financial Report</a>
        <a asp-action="MonthlyRevenue" class="btn btn-outline-info">Monthly Revenue</a>
    </div>
</div>

<!-- Performance Metrics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Count()</h4>
                        <p class="mb-0">Active Doctors</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-user-md fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(x => x.TotalAppointments)</h4>
                        <p class="mb-0">Total Appointments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(x => x.PaidAppointments)</h4>
                        <p class="mb-0">Completed Appointments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(x => x.TotalRevenue).ToString("C")</h4>
                        <p class="mb-0">Total Revenue</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Performance Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Doctor Performance Details</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Rank</th>
                        <th>Doctor Name</th>
                        <th>Specialty</th>
                        <th>Total Appointments</th>
                        <th>Completed Appointments</th>
                        <th>Completion Rate</th>
                        <th>Total Revenue</th>
                        <th>Average Fee</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                        foreach (var doctor in Model)
                        {
                            var completionRate = doctor.TotalAppointments > 0 ?
                            (doctor.PaidAppointments * 100.0 / doctor.TotalAppointments) : 0;

                            <tr>
                                <td>
                                    @if (rank == 1)
                                    {
                                        <span class="badge bg-warning">#@rank</span>
                                    }
                                    else if (rank <= 3)
                                    {
                                        <span class="badge bg-info">#@rank</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">#@rank</span>
                                    }
                                </td>
                                <td>
                                    <strong>@doctor.DoctorName</strong>
                                    @if (rank <= 3)
                                    {
                                        <i class="fas fa-trophy text-warning"></i>
                                    }
                                </td>
                                <td>@doctor.Specialty</td>
                                <td>@doctor.TotalAppointments</td>
                                <td>@doctor.PaidAppointments</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @GetProgressBarClass(completionRate)"
                                             role="progressbar"
                                             style="width: @completionRate%;"
                                             aria-valuenow="@completionRate"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @completionRate.ToString("F1")%
                                        </div>
                                    </div>
                                </td>
                                <td>@doctor.TotalRevenue.ToString("C")</td>
                                <td>@doctor.AverageFee.ToString("C")</td>
                            </tr>
                            rank++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string GetProgressBarClass(double rate)
    {
        return rate >= 80 ? "bg-success" :
               rate >= 60 ? "bg-info" :
               rate >= 40 ? "bg-warning" : "bg-danger";
    }
}