@model IEnumerable<ClinicSystem2.Models.VwDoctorAvailableSlot>

@{
    ViewData["Title"] = "Available Slots";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Available Appointment Slots</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>

<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Available Doctors and Time Slots</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var doctor in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h6 class="mb-0">@doctor.DoctorName</h6>
                                <small class="text-muted">@doctor.Specialty</small>
                            </div>
                          
                            <div class="card-footer">
                                <a asp-controller="Appointment" asp-action="Create" class="btn btn-sm btn-primary">Book Appointment</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <h4>No available slots</h4>
                <p class="mb-0">All doctors are currently busy. Please check back later.</p>
            </div>
        }
    </div>
</div>