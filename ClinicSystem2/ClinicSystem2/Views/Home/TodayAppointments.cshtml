@model IEnumerable<ClinicSystem2.Models.VwDoctorScheduleToday>

@{
    ViewData["Title"] = "Today's Appointments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Today's Appointments</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
        <a asp-action="QuickAppointment" class="btn btn-primary">Book New Appointment</a>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Appointments for @DateTime.Today.ToString("MMMM dd, yyyy")</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Time</th>
                            <th>Doctor</th>
                            <th>Specialty</th>
                            <th>Patient</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@appointment.AppointmentDate.ToString("HH:mm")</strong>
                                </td>
                                <td>@appointment.DoctorName</td>
                                <td>@appointment.Specialty</td>
                                <td>@appointment.PatientName</td>
                                <td>
                                    <span class="text-bg-danger badge badge-@GetStatusBadgeClass(appointment.Status)">
                                        @appointment.Status
                                    </span>
                                </td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <h4>No appointments scheduled for today</h4>
                <p class="mb-0">You can book new appointments using the button above.</p>
            </div>
        }
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "success",
            "confirmed" => "primary",
            "pending" => "warning",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}