@model IEnumerable<ClinicSystem2.Models.VwMonthlyRevenue>

@{
    ViewData["Title"] = "Financial Overview";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Financial Overview</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(m => m.TotalRevenue)?.ToString("C")</h4>
                        <p class="mb-0">Total Revenue</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(m => m.TotalTransactions)?.ToString("N0")</h4>
                        <p class="mb-0">Total Transactions</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exchange-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Average(m => m.AveragePayment)?.ToString("C")</h4>
                        <p class="mb-0">Average Payment</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calculator fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Monthly Revenue Report</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Year</th>
                        <th>Month</th>
                        <th>Payment Method</th>
                        <th>Total Transactions</th>
                        <th>Total Revenue</th>
                        <th>Average Payment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var revenue in Model)
                    {
                        <tr>
                            <td>@revenue.Year</td>
                            <td>@GetMonthName(revenue.Month)</td>
                            <td>
                                <span class="badge badge-secondary">@revenue.PaymentMethod</span>
                            </td>
                            <td>@revenue.TotalTransactions</td>
                            <td>@revenue.TotalRevenue?.ToString("C")</td>
                            <td>@revenue.AveragePayment?.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    private string GetMonthName(int? month)
    {
        if (!month.HasValue) return "Unknown";
        return new DateTime(2020, month.Value, 1).ToString("MMMM");
    }
}