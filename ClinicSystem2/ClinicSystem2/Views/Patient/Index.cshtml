@model IEnumerable<ClinicSystem2.ViewModels.PatientViewModel>

@{
    ViewData["Title"] = "Patients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Patients Management</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Patient
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Patients List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="patientsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Registration Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                                @if (!string.IsNullOrEmpty(item.Email))
                                {
                                    <br />
                                    <small class="text-muted">@item.Email</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Phone))
                                {
                                    <div><i class="fas fa-phone"></i> @item.Phone</div>
                                }
                                @if (!string.IsNullOrEmpty(item.Address))
                                {
                                    <div><i class="fas fa-map-marker-alt"></i> @item.Address</div>
                                }
                            </td>
                            <td>
                                @if (item.Age.HasValue)
                                {
                                    <span class="badge bg-info">@item.Age years</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">N/A</span>
                                }
                            </td>
                            <td>
                                <span class="badge @(item.Gender == "Male" ? "bg-primary" : "bg-pink")">
                                    @item.Gender
                                </span>
                            </td>
                            <td>
                                <small>@item.CreatedDate.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.PatientID" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PatientID" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PatientID" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Home" asp-action="QuickRegister" class="btn btn-outline-primary mb-2 w-100">
                    <i class="fas fa-user-plus"></i> Quick Registration
                </a>
                <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-success mb-2 w-100">
                    <i class="fas fa-calendar-plus"></i> Book Appointment
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4>@Model.Count()</h4>
                        <small class="text-muted">Total Patients</small>
                    </div>
                    <div class="col-6">
                        <h4>@Model.Count(p => p.CreatedDate.Date == DateTime.Today)</h4>
                        <small class="text-muted">New Today</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // جعل الجدول قابل للبحث والترتيب
        document.addEventListener('DOMContentLoaded', function() {
            // يمكن إضافة DataTables هنا إذا كنت تريد ميزات إضافية
        });
    </script>

    <style>
        .bg-pink {
            background-color: #e83e8c !important;
        }
    </style>
}