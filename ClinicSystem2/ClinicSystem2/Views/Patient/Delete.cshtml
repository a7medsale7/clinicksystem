@model ClinicSystem2.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Patient</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i> Warning!
    </h4>
    <p>Are you sure you want to delete this patient? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Patient Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    @Model.Email
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>

            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    @Model.Phone
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>

            <dt class="col-sm-3">Birth Date:</dt>
            <dd class="col-sm-9">
                @if (Model.BirthDate.HasValue)
                {
                    @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>

            <dt class="col-sm-3">Age:</dt>
            <dd class="col-sm-9">
                @if (Model.Age.HasValue)
                {
                    <span class="badge bg-info">@Model.Age years old</span>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>

            <dt class="col-sm-3">Gender:</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Gender == "Male" ? "bg-primary" : "bg-pink")">
                    @Model.Gender
                </span>
            </dd>

            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    @Model.Address
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>

            <dt class="col-sm-3">Registration Date:</dt>
            <dd class="col-sm-9">
                <small class="text-muted">@Model.CreatedDate.ToString("MMMM dd, yyyy")</small>
            </dd>
        </dl>

        <div class="alert alert-warning mt-3">
            <strong>Note:</strong> Deleting this patient will also remove all associated appointments,
            medical records, and payment history. This action is permanent and cannot be recovered.
        </div>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="PatientID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.PatientID" class="btn btn-info">
            <i class="fas fa-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<style>
    .bg-pink {
        background-color: #e83e8c !important;
    }
</style>