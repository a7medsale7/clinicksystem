@model IEnumerable<ClinicSystem2.ViewModels.MedicalRecordViewModel>

@{
    ViewData["Title"] = "Patient Medical History";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Patient Medical History</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to All Records</a>
</div>

<div class="card mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Patient Information</h5>
    </div>
    <div class="card-body">
        <h4>@ViewBag.PatientName</h4>
        <p class="mb-0 text-muted">Total Records: @Model.Count()</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Record Date</th>
                            <th>Doctor</th>
                            <th>Specialty</th>
                            <th>Diagnosis</th>
                            <th>Prescription</th>
                            <th>Appointment Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RecordDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.DoctorName</td>
                                <td>@item.Specialty</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Diagnosis))
                                    {
                                        <span title="@item.Diagnosis">
                                            @(item.Diagnosis.Length > 50 ? item.Diagnosis.Substring(0, 50) + "..." : item.Diagnosis)
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Prescription))
                                    {
                                        <span title="@item.Prescription">
                                            @(item.Prescription.Length > 50 ? item.Prescription.Substring(0, 50) + "..." : item.Prescription)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@(item.AppointmentDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.RecordID" class="btn btn-info btn-sm">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No medical records found for this patient.</h4>
        <p class="mb-0">This patient doesn't have any medical records yet.</p>
    </div>
}