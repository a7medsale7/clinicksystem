@model ClinicSystem2.ViewModels.MedicalRecordViewModel

@{
    ViewData["Title"] = "Delete Medical Record";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Medical Record</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this medical record?</h4>
    <p class="mb-0">This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Record Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Record ID:</dt>
            <dd class="col-sm-9">@Model.RecordID</dd>

            <dt class="col-sm-3">Record Date:</dt>
            <dd class="col-sm-9">@Model.RecordDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Patient:</dt>
            <dd class="col-sm-9">@Model.PatientName</dd>

            <dt class="col-sm-3">Doctor:</dt>
            <dd class="col-sm-9">@Model.DoctorName</dd>

            <dt class="col-sm-3">Specialty:</dt>
            <dd class="col-sm-9">@Model.Specialty</dd>

            <dt class="col-sm-3">Appointment Date:</dt>
            <dd class="col-sm-9">@(Model.AppointmentDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</dd>

            <dt class="col-sm-3">Diagnosis:</dt>
            <dd class="col-sm-9">@Model.Diagnosis</dd>

            @if (!string.IsNullOrEmpty(Model.Prescription))
            {
                <dt class="col-sm-3">Prescription:</dt>
                <dd class="col-sm-9">@Model.Prescription</dd>
            }

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <dt class="col-sm-3">Notes:</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            }
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="RecordID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.RecordID" class="btn btn-info">View Details</a>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>