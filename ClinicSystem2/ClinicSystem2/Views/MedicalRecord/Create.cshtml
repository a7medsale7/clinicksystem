@model ClinicSystem2.ViewModels.MedicalRecordCreateEditViewModel

@{
    ViewData["Title"] = "Create Medical Record";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Create Medical Record</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PatientID" class="form-label">Patient *</label>
                        <select asp-for="PatientID" asp-items="Model.Patients" class="form-select">
                            <option value="">-- Select Patient --</option>
                        </select>
                        <span asp-validation-for="PatientID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DoctorID" class="form-label">Doctor *</label>
                        <select asp-for="DoctorID" asp-items="Model.Doctors" class="form-select">
                            <option value="">-- Select Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorID" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AppointmentID" class="form-label">Appointment (Optional)</label>
                <select asp-for="AppointmentID" asp-items="Model.Appointments" class="form-select">
                    <option value="0">-- Select Appointment --</option>
                </select>
                <small class="form-text text-muted">Only completed appointments without medical records are shown</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RecordDate" class="form-label">Record Date</label>
                <input asp-for="RecordDate" class="form-control" />
                <span asp-validation-for="RecordDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Diagnosis" class="form-label">Diagnosis *</label>
                <textarea asp-for="Diagnosis" class="form-control" rows="4" placeholder="Enter diagnosis details..."></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prescription" class="form-label">Prescription</label>
                <textarea asp-for="Prescription" class="form-control" rows="3" placeholder="Enter prescription details..."></textarea>
                <span asp-validation-for="Prescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter additional notes..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}