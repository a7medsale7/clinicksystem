@model ClinicSystem2.ViewModels.MedicalRecordViewModel

@{
    ViewData["Title"] = "Medical Record Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Medical Record Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.RecordID" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Record Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Record ID:</dt>
            <dd class="col-sm-9">@Model.RecordID</dd>

            <dt class="col-sm-3">Record Date:</dt>
            <dd class="col-sm-9">@Model.RecordDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Patient:</dt>
            <dd class="col-sm-9">@Model.PatientName</dd>

            <dt class="col-sm-3">Doctor:</dt>
            <dd class="col-sm-9">@Model.DoctorName</dd>

            <dt class="col-sm-3">Specialty:</dt>
            <dd class="col-sm-9">@Model.Specialty</dd>

            <dt class="col-sm-3">Appointment Date:</dt>
            <dd class="col-sm-9">@(Model.AppointmentDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</dd>

            <dt class="col-sm-3">Diagnosis:</dt>
            <dd class="col-sm-9">@Model.Diagnosis</dd>

            <dt class="col-sm-3">Prescription:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Prescription) ? "N/A" : Model.Prescription)</dd>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <dt class="col-sm-3">Notes:</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>