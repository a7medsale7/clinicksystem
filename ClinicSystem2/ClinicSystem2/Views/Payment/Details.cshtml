@model ClinicSystem2.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Payment Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.PaymentID" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-money-bill-wave"></i> Payment Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Payment ID:</dt>
                    <dd class="col-sm-8">#@Model.PaymentID</dd>

                    <dt class="col-sm-4">Appointment ID:</dt>
                    <dd class="col-sm-8">#@Model.AppointmentID</dd>

                    <dt class="col-sm-4">Patient:</dt>
                    <dd class="col-sm-8">@Model.PatientName</dd>

                    <dt class="col-sm-4">Doctor:</dt>
                    <dd class="col-sm-8">@Model.DoctorName</dd>

                    <dt class="col-sm-4">Amount:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success fs-6">@Model.Amount.ToString("C")</span>
                    </dd>

                    <dt class="col-sm-4">Payment Method:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @GetMethodBadgeClass(Model.Method)">@Model.Method</span>
                    </dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                    </dd>

                    <dt class="col-sm-4">Payment Date:</dt>
                    <dd class="col-sm-8">
                        <strong>@Model.PaymentDate.ToString("MMMM dd, yyyy")</strong>
                        <br />
                        <small class="text-muted">@Model.PaymentDate.ToString("hh:mm tt")</small>
                    </dd>

                    <dt class="col-sm-4">Reference:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.TransactionReference))
                        {
                            <code>@Model.TransactionReference</code>
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-receipt"></i> Payment Receipt
                </h5>
            </div>
            <div class="card-body">
                <div class="receipt bg-light p-4 rounded">
                    <div class="text-center mb-4">
                        <h4 class="text-primary">CLINIC SYSTEM</h4>
                        <p class="text-muted mb-0">Payment Receipt</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Receipt #:</strong><br>
                            <span>@Model.PaymentID</span>
                        </div>
                        <div class="col-6 text-end">
                            <strong>Date:</strong><br>
                            <span>@Model.PaymentDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <strong>Patient:</strong><br>
                        <span>@Model.PatientName</span>
                    </div>

                    <div class="mb-3">
                        <strong>Doctor:</strong><br>
                        <span>@Model.DoctorName</span>
                    </div>

                    <div class="mb-3">
                        <strong>Payment Method:</strong><br>
                        <span>@Model.Method</span>
                    </div>

                    <div class="mb-3">
                        <strong>Reference:</strong><br>
                        <span>@(Model.TransactionReference ?? "N/A")</span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Total Amount:</strong>
                        <h4 class="text-success mb-0">@Model.Amount.ToString("C")</h4>
                    </div>

                    <div class="text-center mt-4">
                        <span class="badge @GetStatusBadgeClass(Model.Status) fs-6">@Model.Status</span>
                    </div>
                </div>

                <div class="mt-3 text-center">
                    <button class="btn btn-outline-primary" onclick="window.print()">
                        <i class="fas fa-print"></i> Print Receipt
                    </button>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.PaymentID" class="btn btn-warning mb-2 w-100">
                    <i class="fas fa-edit"></i> Edit Payment
                </a>
                <a asp-controller="Appointment" asp-action="Details" asp-route-id="@Model.AppointmentID"
                   class="btn btn-outline-info mb-2 w-100">
                    <i class="fas fa-calendar"></i> View Appointment
                </a>
                <a asp-action="Delete" asp-route-id="@Model.PaymentID" class="btn btn-outline-danger w-100">
                    <i class="fas fa-trash"></i> Delete Payment
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning",
            "Failed" => "bg-danger",
            "Refunded" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetMethodBadgeClass(string method)
    {
        return method switch
        {
            "Credit Card" => "bg-primary",
            "Cash" => "bg-success",
            "Online" => "bg-info",
            "Bank Transfer" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}

<style>
    .receipt {
        border: 2px dashed #dee2e6;
        font-family: 'Courier New', monospace;
    }

    @@media print {
        .btn, .card-header, .d-flex {
            display: none !important;
        }

        .receipt {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>