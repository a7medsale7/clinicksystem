@model ClinicSystem2.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Payment</h1>
    <a asp-action="Details" asp-route-id="@Model.PaymentID" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Details
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i> Warning!
    </h4>
    <p>Are you sure you want to delete this payment? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Payment Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Payment ID:</dt>
            <dd class="col-sm-9">#@Model.PaymentID</dd>

            <dt class="col-sm-3">Appointment ID:</dt>
            <dd class="col-sm-9">#@Model.AppointmentID</dd>

            <dt class="col-sm-3">Patient:</dt>
            <dd class="col-sm-9">@Model.PatientName</dd>

            <dt class="col-sm-3">Doctor:</dt>
            <dd class="col-sm-9">@Model.DoctorName</dd>

            <dt class="col-sm-3">Amount:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-success">@Model.Amount.ToString("C")</span>
            </dd>

            <dt class="col-sm-3">Payment Method:</dt>
            <dd class="col-sm-9">
                <span class="badge @GetMethodBadgeClass(Model.Method)">@Model.Method</span>
            </dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
            </dd>

            <dt class="col-sm-3">Payment Date:</dt>
            <dd class="col-sm-9">
                <strong>@Model.PaymentDate.ToString("MMMM dd, yyyy")</strong>
                <br />
                <small class="text-muted">@Model.PaymentDate.ToString("hh:mm tt")</small>
            </dd>

            <dt class="col-sm-3">Reference:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.TransactionReference))
                {
                    <code>@Model.TransactionReference</code>
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </dd>
        </dl>

        <div class="alert alert-warning mt-3">
            <strong>Note:</strong> Deleting this payment will remove it from the system permanently.
            The associated appointment status might be affected if this was the only payment record.
        </div>

        @if (Model.Status == "Paid")
        {
            <div class="alert alert-danger mt-3">
                <strong>Important:</strong> This payment is marked as "Paid". Deleting it may affect financial reports and accounting records.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="PaymentID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.PaymentID" class="btn btn-info">
            <i class="fas fa-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning",
            "Failed" => "bg-danger",
            "Refunded" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetMethodBadgeClass(string method)
    {
        return method switch
        {
            "Credit Card" => "bg-primary",
            "Cash" => "bg-success",
            "Online" => "bg-info",
            "Bank Transfer" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}