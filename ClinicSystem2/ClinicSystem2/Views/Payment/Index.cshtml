@model IEnumerable<ClinicSystem2.ViewModels.PaymentViewModel>

@{
    ViewData["Title"] = "Payments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Payments Management</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Payment
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Payments List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Payment Date</th>
                        <th>Reference</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.PatientName</strong>
                            </td>
                            <td>@item.DoctorName</td>
                            <td>
                                <span class="badge bg-success fs-6">@item.Amount.ToString("C")</span>
                            </td>
                            <td>
                                <span class="badge @GetMethodBadgeClass(item.Method)">@item.Method</span>
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                            </td>
                            <td>
                                <small>@item.PaymentDate.ToString("MMM dd, yyyy")</small>
                                <br />
                                <small class="text-muted">@item.PaymentDate.ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.TransactionReference))
                                {
                                    <code>@item.TransactionReference</code>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.PaymentID" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PaymentID" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PaymentID" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <h4 class="text-primary">@Model.Count()</h4>
                        <small class="text-muted">Total Payments</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-success">@Model.Count(p => p.Status == "Paid")</h4>
                        <small class="text-muted">Paid</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-warning">@Model.Sum(p => p.Amount).ToString("C")</h4>
                        <small class="text-muted">Total Revenue</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Payment Methods</h5>
            </div>
            <div class="card-body">
                @{
                    var methods = Model.GroupBy(p => p.Method)
                    .Select(g => new { Method = g.Key, Count = g.Count() })
                    .OrderByDescending(x => x.Count);
                }
                @foreach (var method in methods)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <span>@method.Method</span>
                        <span class="badge bg-secondary">@method.Count</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning",
            "Failed" => "bg-danger",
            "Refunded" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetMethodBadgeClass(string method)
    {
        return method switch
        {
            "Credit Card" => "bg-primary",
            "Cash" => "bg-success",
            "Online" => "bg-info",
            "Bank Transfer" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}