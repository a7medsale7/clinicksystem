@model IEnumerable<ClinicSystem2.ViewModels.AppointmentViewModel>

@{
    ViewData["Title"] = "Appointments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Appointments Management</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Appointment
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-search"></i> Search Appointments
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="SearchByDoctor" method="post" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Doctor Name</label>
                <input type="text" name="doctorName" class="form-control" placeholder="Enter doctor name...">
            </div>
            <div class="col-md-5">
                <label class="form-label">Date</label>
                <input type="date" name="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Appointments List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.PatientName</strong>
                                @if (!string.IsNullOrEmpty(item.PatientPhone))
                                {
                                    <br />
                                    <small class="text-muted">@item.PatientPhone</small>
                                }
                            </td>
                            <td>
                                <strong>@item.DoctorName</strong>
                                <br />
                                <small class="text-muted">@item.Specialty</small>
                            </td>
                            <td>
                                <strong>@item.AppointmentDate.ToString("MMM dd, yyyy")</strong>
                                <br />
                                <small class="text-muted">@item.AppointmentDate.ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Notes))
                                {
                                    <span title="@item.Notes">
                                        @(item.Notes.Length > 50 ? item.Notes.Substring(0, 50) + "..." : item.Notes)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No notes</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.AppointmentID" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.AppointmentID" class="btn btn-warning btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>
                                    @if (item.Status != "Completed")
                                    {
                                        <a asp-action="Complete" asp-route-id="@item.AppointmentID" class="btn btn-success btn-sm" title="Complete">
                                            <i class="fas fa-check"></i>Complete
                                        </a>
                                    }
                                    <a asp-action="Delete" asp-route-id="@item.AppointmentID" class="btn btn-danger btn-sm" title="Delete">
                                        <i class="fas fa-trash"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-action="TodaySchedule" class="btn btn-outline-primary mb-2 w-100">
                    <i class="fas fa-calendar-day"></i> Today's Schedule
                </a>
               
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <h5 class="text-primary">@Model.Count(a => a.Status == "Pending")</h5>
                        <small class="text-muted">Pending</small>
                    </div>
                    <div class="col-4">
                        <h5 class="text-success">@Model.Count(a => a.Status == "Confirmed")</h5>
                        <small class="text-muted">Confirmed</small>
                    </div>
                    <div class="col-4">
                        <h5 class="text-info">@Model.Count(a => a.Status == "Completed")</h5>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-success",
            "Completed" => "bg-info",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}