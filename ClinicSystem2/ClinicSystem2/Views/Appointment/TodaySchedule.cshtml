@model IEnumerable<ClinicSystem2.Models.VwDoctorScheduleToday>

@{
    ViewData["Title"] = "Today's Schedule";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-calendar-day"></i> Today's Schedule
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> All Appointments
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Appointment
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-list"></i> Appointments for @DateTime.Today.ToString("MMMM dd, yyyy")
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Doctor</th>
                            <th>Patient</th>
                            <th>Specialty</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@appointment.AppointmentDate.ToString("hh:mm tt")</strong>
                                </td>
                                <td>
                                    <strong>@appointment.DoctorName</strong>
                                </td>
                                <td>@appointment.PatientName</td>
                                <td>@appointment.Specialty</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                        @appointment.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>Details
                                        </a>
                                        @if (appointment.Status != "Completed")
                                        {
                                            <a asp-action="Complete" asp-route-id="@appointment.AppointmentId" class="btn btn-success btn-sm">
                                                <i class="fas fa-check"></i>Complete
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Statistics -->
            <div class="row mt-4 text-center">
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h4>@Model.Count(a => a.Status == "Pending")</h4>
                            <small>Pending</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h4>@Model.Count(a => a.Status == "Confirmed")</h4>
                            <small>Confirmed</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h4>@Model.Count(a => a.Status == "Completed")</h4>
                            <small>Completed</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-secondary text-white">
                        <div class="card-body">
                            <h4>@Model.Count()</h4>
                            <small>Total</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h3>No Appointments Today</h3>
                <p class="text-muted">There are no appointments scheduled for today.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Schedule an Appointment
                </a>
            </div>
        }
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-success",
            "Completed" => "bg-info",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}