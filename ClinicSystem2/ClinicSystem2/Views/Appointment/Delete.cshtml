@model ClinicSystem2.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Appointment</h1>
    <a asp-action="Details" asp-route-id="@Model.AppointmentID" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Details
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i> Warning!
    </h4>
    <p>Are you sure you want to delete this appointment? This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Appointment Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Patient:</dt>
            <dd class="col-sm-9">
                <strong>@Model.PatientName</strong>
                @if (!string.IsNullOrEmpty(Model.PatientPhone))
                {
                    <br />
                
                    <small class="text-muted">@Model.PatientPhone</small>
                }
            </dd>

            <dt class="col-sm-3">Doctor:</dt>
            <dd class="col-sm-9">
                <strong>@Model.DoctorName</strong>
                <br /><small class="text-muted">@Model.Specialty</small>
            </dd>

            <dt class="col-sm-3">Date & Time:</dt>
            <dd class="col-sm-9">
                <strong>@Model.AppointmentDate.ToString("MMMM dd, yyyy")</strong>
                <br /><small class="text-muted">@Model.AppointmentDate.ToString("hh:mm tt")</small>
            </dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
            </dd>

            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    @Model.Notes
                }
                else
                {
                    <span class="text-muted">No notes</span>
                }
            </dd>
        </dl>

        @if (ViewBag.HasMedicalRecord == true || ViewBag.HasPayment == true)
        {
            <div class="alert alert-warning mt-3">
                <h6><i class="fas fa-exclamation-circle"></i> Associated Records</h6>
                <ul class="mb-0">
                    @if (ViewBag.HasMedicalRecord)
                    {
                        <li>This appointment has a medical record that will also be deleted</li>
                    }
                    @if (ViewBag.HasPayment)
                    {
                        <li>This appointment has payment information that will also be deleted</li>
                    }
                </ul>
            </div>
        }

        <div class="alert alert-danger mt-3">
            <strong>Note:</strong> Deleting this appointment will permanently remove all associated data including any medical records and payment information. This action is irreversible.
        </div>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="AppointmentID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.AppointmentID" class="btn btn-info">
            <i class="fas fa-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-success",
            "Completed" => "bg-info",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}